#pricing.block.block-fill-height.block-inverse.app-block-yellow{:style => "background-image: url(#{image_url('spiderhouse.jpg')})"}
  .block-xs-middle
    .container
      .row.m-b-md
        .col-lg-12
          %h1.block-title.m-b-md
            %span.text-ribbon
              %span Registration Begins 1/17
          -# %p.lead
          -#   %span.text-ribbon.text-muted
          -#     %span
          -#       We are pre-registering students now.
        .row
        - @camps.each do |c|
          .col-sm-12.col-lg-6
            .panel
              .panel-body
                %h3.panel-title #{c.name}
                %h4.text-muted.text-serif.m-t-0.m-b
                  %em.small
                    = c.start_date.strftime("%B %d, %Y")
                    &mdash;
                    = c.end_date.strftime("%B %d, %Y")
                %p.text-serif.m-b
                  %em
                    = c.oblique? ? c.oblique['main'] : "A rigorous curriculum dedicated to skills development, research strategies, theoretical investigation and pracitcal application."
                %hr/
                %ul.iconlist.text-serif.m-b-md
                  %li
                    %span.icon.icon-check
                    %em 
                    = c.oblique? ? c.oblique['one'] : "A rigorous curriculum dedicated to skills development, research strategies, theoretical investigation and pracitcal application."
                  %li
                    %span.icon.icon-check
                    %em 
                    = c.oblique? ? c.oblique['two'] : "A rigorous curriculum dedicated to skills development, research strategies, theoretical investigation and pracitcal application."
                  %li
                    %span.icon.icon-check
                    %em 
                    = c.oblique? ? c.oblique['three'] : "A rigorous curriculum dedicated to skills development, research strategies, theoretical investigation and pracitcal application."

                  %br 
                  =link_to "Sign up for #{c.nickname}", camp_path(c.nickname), {class:"text-white btn btn-square btn-block btn-lg text-ribbon-#{c.nickname.downcase}"}
        