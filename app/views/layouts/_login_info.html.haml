- if user_signed_in?
  -if current_user&.account&.employee?
    =link_to current_user.account.first_name.titlecase, edit_employee_path(current_user.account.employee.id), {class:'nav-link', data:{:target => "#stage", :toggle=>"stage"}}
  -elsif current_user&.account&.first_name
    =link_to current_user.account.first_name.titlecase, edit_account_path(current_user.account.id), {class:'nav-link', data:{:target => "#stage", :toggle=>"stage"}}
  -else
    =link_to current_user.email, edit_user_registration_path, {class:'nav-link'}
    =link_to "Sign Out", destroy_user_session_path, {class:'nav-link',method: 'delete'}
- else
  =link_to "Sign In", new_user_session_path,{class:'nav-link', data:{:target => "#stage", :toggle=>"stage"}}
  =link_to "Sign Up", new_user_registration_path,{class:'nav-link', data:{:target => "#stage", :toggle=>"stage"}}
