!!! 5
%html.admin
  %head
    %title utnif
    %meta{ :name => "description", :content => "" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %meta{ :charset => "UTF-8" }
    =# favicon_link_tag
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags

    :plain
      <script type="text/javascript" src="//d3js.org/d3.v3.min.js"></script>
      <script type="text/javascript" src="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js"></script>
      <link rel="stylesheet" href="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css" />

      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
      <![endif]-->
      <style>
        @media (max-width: 768px) and (-webkit-min-device-pixel-ratio: 2) {
          body {
            width: 1px;
            min-width: 100%;
            *width: 100%;
          }
          #stage {
            height: 1px;
            overflow: auto;
            min-height: 100vh;
            -webkit-overflow-scrolling: touch;
          }
        }
      </style>

  %body{:style => "overflow: auto;"}
    = render 'layouts/navbar'
    .stage#stage
      .container
      - flash.each do |type, message|
        .alert.alert-dismissable{ :class => utnif_type(type) }
          = message
          %button.close{ data: { dismiss: 'alert' } } x
      %button.btn.btn-link.stage-toggle{"data-target" => "#stage", "data-toggle" => "stage"}
        %span.a.aez.ara
          Menu
      =link_to 'ADMIN Home', admin_path,{:type=>"button", :class=>"btn btn-link stage-toggle btn-warning", :style => "margin-left:90px"} 
      .block
        = yield

      = javascript_include_tag "application"
      :javascript
        +function ($) {
          $('.alert.alert-dismissable').delay(2000).slideUp("slow");
          $('[data-toggle="tooltip"]').tooltip({placement: 'top',trigger: 'manual'}).tooltip('show');
          $('[data-toggle="tooltip"]').click(function(){
            $(this).tooltip('hide');
          });
        }(jQuery);

