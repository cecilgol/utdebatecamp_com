= form_for [:admin, @employee] do |f|
  - if @employee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@employee.errors.count, "error")} prohibited this camp from being saved:"
      %ul
        - @employee.errors.full_messages.each do |msg|
          %li= msg
      #input

  .form-group.row
    = f.label :camp, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_area :camp, {'rows'=>'3','class'=>'form-control'}
  
  .form-group.row
    = f.label :program, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_field :program, {'class'=>'form-control'}

  .form-group.row
    = f.label :arrival_date, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_field :arrival_date, {'type' => 'date','class'=>'form-control'}

    .form-group.row
    = f.label :leave_date, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_field :leave_date, {'type' => 'date','class'=>'form-control'}
  .form-group.row
    = f.label :bio, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_field :bio, {'class'=>'form-control'}
  .form-group.row
    = f.label :experience, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_field :experience, {'class'=>'form-control'}
  .form-group.row
    = f.label :references, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_field :references, {'class'=>'form-control'}
  .form-group.row
    = f.label :is_hired, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_field :is_hired, {'class'=>'form-control'}
  .form-group.row
    = f.label :references, {'class'=>'col-xs-2 col-form-label'}
    .col-xs-10
      = f.text_field :references, {'class'=>'form-control'}

  .actions
    = f.submit 'Save', {'class'=>'btn btn-primary','type'=>'submit'}