= form_for @account do |f|
  - if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :first_name, {placeholder:'first name',class:'form-control'}
    = f.text_field :middle_name, {placeholder:'middle name',class:'form-control'}
    = f.text_field :last_name, {placeholder:'last name',class:'form-control'}
    = f.text_field :cell_phone, {placeholder:'cell phone number',class:'form-control'}
    = f.text_field :other_phone, {placeholder:'other phone number',class:'form-control'}
    = f.text_field :address1, {placeholder:'address line 1',class:'form-control'}
    = f.text_field :address2, {placeholder:'address line 2',class:'form-control'}
    = f.text_field :city, {placeholder:'city',class:'form-control'}
    = f.text_field :state, {placeholder:'state',class:'form-control'}
    = f.text_field :birthday, {placeholder:'birthday',class:'form-control',type:'date'}


  .actions
    = f.submit 'Save', {'class'=>'btn btn-primary'}
