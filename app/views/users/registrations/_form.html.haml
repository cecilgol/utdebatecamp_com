%h1.apd.amf
  %span.dp.aqa Register
=form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .apz.registration-form
    =f.email_field :email, {autofocus:true, placeholder: "email",class:"ej apy aqa first-registration-entry"} 
    =f.password_field :password, {autocomplete:"off", placeholder: "password",class:"ej apy aqa"} 
    =f.password_field :password_confirmation, {autocomplete:"off",placeholder:"password one more time",class:"ej apy aqa"}
  .actions
    =f.submit "Sign Up!", {class:'dl anz oq ao btn-block'}
